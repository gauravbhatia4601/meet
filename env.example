# Server Configuration
SERVER_PORT=3001
CORS_ORIGIN=http://localhost:3000
MAX_PARTICIPANTS_PER_ROOM=50
ROOM_TIMEOUT_MINUTES=60

# Frontend Configuration
FRONTEND_PORT=3000

# Signaling Server URL
# Development: http://localhost:3001
# Production with reverse proxy (recommended): https://meet.technioz.com (same domain, no port)
# Production without reverse proxy: https://meet.technioz.com:3001 (requires SSL on port 3001)
# Note: If frontend is HTTPS, use HTTPS for signaling server (will auto-convert to WSS)
# IMPORTANT: If using same domain without port, you need nginx reverse proxy (see nginx.production.conf)
VITE_SIGNALING_SERVER_URL=http://localhost:3001

# TURN Server Configuration (for NAT traversal)
# If not set, will use free TURN servers (metered.ca) - suitable for development
# For production, configure your own TURN server (coturn)
# 
# Example with custom TURN server:
# VITE_TURN_SERVER_URL=turn:turn.example.com:3478,turns:turn.example.com:5349
# VITE_TURN_USERNAME=your_turn_username
# VITE_TURN_CREDENTIAL=your_turn_password
#
# To disable free TURN servers and use self-hosted only:
# VITE_USE_FREE_TURN=false
VITE_TURN_SERVER_URL=
VITE_TURN_USERNAME=
VITE_TURN_CREDENTIAL=
VITE_USE_FREE_TURN=true

# Optional: Gemini API (if used in frontend)
GEMINI_API_KEY=

